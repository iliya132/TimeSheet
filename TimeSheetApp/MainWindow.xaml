<Window xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="TimeSheetApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeSheetApp"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.WPF4"
        xmlns:mvvm="http://www.galasoft.ch/mvvmlight"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1100"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        IsEnabled="True">
    <Window.Resources>
        <local:CodeFullConverter x:Key="CodeFullConverter"/>
        <local:CodeDescriptionConverter x:Key="CodeDescriptionConverter"/>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Учет времени">
            <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="0" Width="5" HorizontalAlignment="Right"/>
                    <GridSplitter Grid.Column="2" Width="5" HorizontalAlignment="Left"/>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.6*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="3.5*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" DataContext="{Binding Main, Source={StaticResource Locator}}" Grid.Row="0" Margin="3,0,10,5">
                            <Label Content="Фильтр" FontSize="16" FontWeight="Bold" />
                            <TextBox Name="FilterBox">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="TextChanged">
                                        <mvvm:EventToCommand Command="{Binding FilterProcesses}"
                                             CommandParameter="{Binding ElementName=FilterBox, Path=Text}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>

                        </StackPanel>
                        <ListView Name = "ProcessList" ItemsSource="{Binding ProcessFiltered}" SelectedItem="{Binding CurrentProcess}" Margin="0,0,10,0"
                      SelectionChanged="ProcessList_SelectionChanged" Grid.Row="1">
                            <ListView.View>
                                <GridView>

                                    <GridViewColumn Header="Код" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding Converter={StaticResource CodeFullConverter}}" ToolTip="{Binding Converter={StaticResource CodeDescriptionConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Процесс" Width="240" DisplayMemberBinding="{Binding Path=procName}"/>
                                </GridView>
                            </ListView.View>
                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <Expander IsExpanded="False" FontSize="12" Loaded="Expander_Loaded" Tag="{Binding Name}">
                                                            <Expander.Header>

                                                                <StackPanel>
                                                                    <TextBlock Text="{Binding Name}"/>
                                                                </StackPanel>
                                                            </Expander.Header>
                                                            <ItemsPresenter />

                                                        </Expander>

                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                            </ListView.GroupStyle>
                        </ListView>
                        <StackPanel Orientation="Vertical" Grid.Row="2">
                        <Label Content="Описание:" FontSize="16" FontWeight="Bold" />
                        <TextBlock Margin="5,5,10,5" Text="{Binding ElementName=ProcessList, Path=SelectedItem.Comment}"  Height="auto" TextWrapping="Wrap"/>
                            
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="290"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>




                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Image Source="Resource/calendarIcon.png" HorizontalAlignment="Left"  Margin="25,2,0,2" Width="25"/>
                            <Image Source="Resource/AddClock.png" HorizontalAlignment="Left"  Margin="60,2,0,2" Width="25"/>
                            <Image Source="Resource/DeleteClock.png" HorizontalAlignment="Right"  Margin="50,2,0,2" Width="25"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <DatePicker Name="DateBox" Grid.Row="0" HorizontalAlignment="Right" Width="100" SelectedDate="{Binding CurrentDate}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectedDateChanged">
                                        <mvvm:EventToCommand Command="{Binding ReloadTimeSpan}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </DatePicker>
                            <xctk:TimePicker Name="TimeIn" Width="70" Margin="5,0,0,0" HorizontalAlignment="Left" TextAlignment="Center" TimeInterval="0:15:0" Grid.Row="2"
                                 Value="{Binding CurrentTimeStart}"/>
                            <xctk:TimePicker Name="Timeout" Width="70" Margin="5,0,0,0" HorizontalAlignment="Right" TextAlignment="Center" TimeInterval="0:15:0" Grid.Row="2"
                                 Value="{Binding CurrentTimeEnd}"/>
                        </StackPanel>



                        <StackPanel Grid.Row="2" Margin="0,10,0,0" DataContext="{Binding Main, Source={StaticResource Locator}}">
                            <Label Content="Бизнес подразделение" FontWeight="Bold"/>
                            <ComboBox Name="businessCombo" Margin="0,0,0,0"  ItemsSource="{Binding BusinessBlock}" SelectedIndex="{Binding CurrentProcess.BusinessBlock}" />
                            <Label Content="Support" FontWeight="Bold"/>
                            <ComboBox Name="supportCombo" Margin="0,0,0,0" ItemsSource="{Binding NonBusinessBlock}" SelectedIndex="{Binding CurrentProcess.Support}" />
                            <Label Content="Клиентские пути" FontWeight="Bold"/>
                            <ComboBox Name="clientWaysCombo" Margin="0,0,0,0" ItemsSource="{Binding ClientWays}" SelectedIndex="{Binding CurrentProcess.ClientWay}" />
                            <Label Content="Эскалация" FontWeight="Bold"/>
                            <ComboBox Name="escalationCombo" Margin="0,0,0,0" ItemsSource="{Binding Escalations}" SelectedIndex="{Binding CurrentProcess.Escalation}" />
                            <Label Content="Формат" FontWeight="Bold"/>
                            <ComboBox Name="formatCombo" Margin="0,0,0,0" ItemsSource="{Binding FormatList}" SelectedIndex="{Binding CurrentProcess.Format}" />
                            <Label Content="Риск" FontWeight="Bold"/>
                            <ComboBox Name="riskCombo" ItemsSource="{Binding RiskCol}" SelectedIndex="{Binding CurrentProcess.Risk}" />

                            <Button Name="Add" Height="35" Margin="0,10,0,0" 

                        
                        DataContext="{Binding Main, Source={StaticResource Locator}}"
                        Command="{Binding AddProcess}"
                        CommandParameter="{Binding CurrentProcess}"
                        Style="{StaticResource GreenButton}"
                        >

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Center">
                                    <Label Content="Добавить активность" VerticalAlignment="Center"/>
                                    <Image Source="Resource/AddIcon.png"/>
                                </StackPanel>

                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Grid.Row="4" >
                            <Label Content="Тема" FontSize="16"  Margin="5,0,0,0" FontWeight="Bold"/>
                            <TextBox Name="Subject" Margin="0,0,5,0" Height="30" TextAlignment="Left" Text="{Binding Subject}"/>
                            <Label Content="Комментарий" FontSize="16"  Margin="5,0,0,0" FontWeight="Bold"/>
                            <TextBox Name="Comment" Margin="0,0,5,0" Height="150" TextWrapping="Wrap" AcceptsReturn="True" 
                         Text="{Binding Body}"
                         />
                        </StackPanel>

                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                            <ListView Name="TimeSpanListView"  ItemsSource="{Binding TimeSheetColl}" Margin="10,0,0,0" Grid.Row="0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <mvvm:EventToCommand Command="{Binding Main.EditProcess, Source={StaticResource Locator}}"
                                                CommandParameter="{Binding ElementName=TimeSpanListView, Path=SelectedItem.timeIn}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <ListView.View>
                                    <GridView>

                                    <GridViewColumn Header="Start" Width="50" DisplayMemberBinding="{Binding Path=timeStart, StringFormat={}{0:HH:mm}}"/>
                                    <GridViewColumn Header="End" Width="50" DisplayMemberBinding="{Binding Path=timeEnd, StringFormat={}{0:HH:mm}}"/>
                                        <GridViewColumn Header="Процесс" Width="50" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                    <TextBlock Text="{Binding Converter={StaticResource CodeFullConverter}}" ToolTip="{Binding Converter={StaticResource CodeDescriptionConverter}}"/>

                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Тема" Width="100" DisplayMemberBinding="{Binding Path=Subject}"/>
                                        <GridViewColumn Width="40" Header="Ред.">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Button Width="25" 
                                                Command="{Binding Main.EditProcess, Source={StaticResource Locator}}"
                                                CommandParameter="{Binding timeIn}">
                                                            <Image Source="Resource/EditIcon.png" Width="15" MinWidth="15"/>
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Width="40" Header="Удал.">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Button Width="25"
                                                Command="{Binding Main.DeleteProcess, Source={StaticResource Locator}}"
                                                CommandParameter="{Binding timeIn}">
                                                            <Image Source="Resource/DeleteIcon.png" Width="20" MinWidth="15"/>
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <StackPanel Orientation="Horizontal" Margin="20,5,0,0" Grid.Row="1">
                                <Image Source="Resource/timerIcon.png" Width="25" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Path=TotalDurationInMinutes}"  FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Кабинет руководителя" Visibility="{Binding IsImBoss.Visibility}">
                <Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Сотрудники под моим руководством:" FontSize="16" VerticalAlignment="Center"/>
                            <DataGrid Name="AnalyticTable" 
						              ItemsSource="{Binding AnalyticsData}" Grid.Row="1" 
						              AutoGenerateColumns="False"
						              IsReadOnly="True"
                                      AlternatingRowBackground="LightGray"
                                      AlternationCount="2"
						  >
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <i:InvokeCommandAction Command="{Binding Main.SelectAnalytic, Source={StaticResource Locator}}"
												   CommandParameter="{Binding ElementName=AnalyticTable, Path=SelectedItems}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}"/>
                                    <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}"/>
                                    <DataGridTextColumn Header="Отчество" Binding="{Binding FatherName}"/>
                                    <DataGridTextColumn Header="Login" Binding="{Binding UserName}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                        <StackPanel Orientation="Vertical" Grid.Column="1">
                            <TextBlock Text="Настройки отчета:" Margin="5,10,5,10" FontSize="16"/>
                            <ComboBox Name="ReportBox" SelectedIndex="{Binding SelectedReport}" ItemsSource="{Binding Reports}" Margin="5,0,5,15"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Label Content="Начальная дата:"/>
                                <DatePicker Name="StartDatePicker" SelectedDate="{Binding Main.StartReportDate, Source={StaticResource Locator}}"/>
                                <Label Content="Конечная дата:"/>
                                <DatePicker Name="EndDatePicker" SelectedDate="{Binding Main.EndReportDate, Source={StaticResource Locator}}"/>
                            </StackPanel>
                            <Button Name="GetReport" Content="Выгрузить отчет" Height="50" Margin="5,5,5,10" Command="{Binding GetReport}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        
       
    </Grid>
</Window>

<Window x:Class="TimeSheetApp.SelectCalendarItems"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeSheetApp"
      mc:Ignorable="d" 
      Title="SelectCalendarItems" Height="222.603" Width="384.942" ShowInTaskbar="False" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="True" WindowStartupLocation="CenterOwner">

    <Grid DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
        <ListView ItemsSource="{Binding CalendarItem}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Subject" DisplayMemberBinding="{Binding Subject}"/>
                    <GridViewColumn Header="start" DisplayMemberBinding="{Binding StartTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                    <GridViewColumn Header="end" DisplayMemberBinding="{Binding EndTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>


                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
